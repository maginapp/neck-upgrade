{
  "manifest_version": 3,
  "name": "Neck Upgrade",
  "version": "1.0.0",
  "description": "A Chrome extension for neck health",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://zh.wikipedia.org/*",
    "https://timor.tech/*",
    "https://api.dictionaryapi.dev/*",
    "https://zenquotes.io/*",
    "https://v1.hitokoto.cn/*",
    "https://s.weibo.com/*",
    "https://www.xiaohongshu.com/*",
    "https://so.toutiao.com/*",
    "https://api.toutiaoapi.com/*",
    "https://news.google.com/*"
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "pages/newtab.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/data/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
