{
  "name": "neck-upgrade",
  "version": "1.0.0",
  "description": "Chrome extension for historical events and holidays",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && cross-env REMOVE_CONSOLE=true vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,scss}\"",
    "prepare": "husky install",
    "fetch-poetry": "tsx scripts/fetch-poetry/index.ts",
    "cleanup-poetry": "tsx scripts/fetch-poetry/cleanup.ts",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "changeset": "changeset",
    "version": "changeset version",
    "release:extension": "tsx scripts/publish-extension.ts"
  },
  "keywords": [
    "chrome-extension",
    "react",
    "typescript",
    "new-tab",
    "history",
    "holiday"
  ],
  "author": {
    "name": "maginapp",
    "url": "https://github.com/maginapp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maginapp/neck-upgrade.git"
  },
  "bugs": {
    "url": "https://github.com/maginapp/neck-upgrade/issues"
  },
  "homepage": "https://github.com/maginapp/neck-upgrade#readme",
  "license": "MIT",
  "dependencies": {
    "chinese-poetry": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/chrome": "^0.0.260",
    "@types/node": "^22.15.19",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "sass": "^1.89.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "5.39.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
