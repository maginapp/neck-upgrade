{
  "manifest_version": 3,
  "name": "历史上的今天",
  "version": "1.0.0",
  "description": "展示历史上的今天和节假日信息",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://zh.wikipedia.org/*",
    "https://timor.tech/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 